.history-table-wrap{
  border-right:0;
  border-bottom: 0;
  margin-top: 15rpx;
  width: 100%;
  height: 600rpx;
  overflow-y: scroll;
  overflow-x: hidden;
}
.title{
  position: absolute;
  left: 1%;
  width:98.5%;
  display: flex;
  justify-content: space-between;
}
/* 表格代码   */
.table{
  border:1px solid black;
  border-right:0;
  border-bottom: 0;
  width: 98%;
  margin-left: 1%;
}
.tr{
  width:100%;
  display: flex;
  justify-content: space-between;
}
.td{
  height: 60rpx;
  border-bottom: 1px solid black;
  border-right: 1px solid black;
  text-align: center;
  width: 100%;
}
.th{
  padding: 10px;
  text-align: center;
  width: 100%;
}
.th1{
  width: 30%;
}
.th2{
  width: 30%;
}
.th3{
  width: 40%;
}
.td1{
  width: 30%;
}
.td2{
  width: 30%;
}
.td3{
  width: 40%;
}
.th{
  font-weight: 800;
  background-color: #03a8f3;
  font-size: 28rpx;
  color: #330e0e;
}
.td{
  font-size: 20rpx;
  color: black;
}
.image{
  margin:10rpx;
  width: 130rpx;
  height: 130rpx;
}
<!--pages/site/site.wxml  方案设计-->

<view class="margin-bottom-15">
  <view class='flex-row flex-center margin-top-40'>
    <image class='icon-25 margin-left-20' src='{{uploadpath}}resource/{{res.arrows}}'></image>
    <view class='txt-bold txt-black'>{{fangansjtask.name_name}}</view>
  </view>

  <view class='flex-row flex-center margin-top-20'>
    <view class='icon-25'></view>
    <view class='margin-left-40  txt-black h5'>任务截止时间：</view>
    <view class='margin-left-20  txt-black h5'>{{fangansjtask.time}}</view>
  </view>

  <view class='flex-row flex-center'>
    <view class='icon-25'></view>
    <view class='margin-left-40 margin-top-15 txt-black h5'>任务名称：</view>
    <view></view>
    <view class='margin-left-75 margin-top-15 txt-black h5'>{{fangansjtask.taskname_name}}</view>
  </view>
</view>

<view style='height:10rpx;background:#eeeeee;width:100%'></view>

<view class="margin-bottom-80">
  <view class='flex-row flex-center margin-top-20 margin-bottom-20'>
    <image class='icon-25 margin-left-30 margin-top-20' src='{{uploadpath}}resource/{{res.money}}'></image>
    <input class='margin-top-20 margin-left-25 padding-10 txt-black h5' type='number' style='width:480rpx;border-bottom:1rpx solid #c2c0c4' placeholder-style='color:#c2c5c8' placeholder='请输入站点金额'></input>
  </view>
  <view class='flex-row flex-center margin-bottom-10 txt-gray h5'>
    <image class='icon-25 margin-left-25' src='{{uploadpath}}resource/{{res.sitetime}}'></image>
    <view style='width:35rpx'></view>
    <picker mode="date" bindchange="changeDate" value="{{date}}" start="{{startdate}}" end="{{enddate}}">
      <block class=' margin-left-25 padding-10 ' style='width:480rpx;border-bottom:1rpx solid #c2c0c4' placeholder-style='color:#c2c5c8' wx:if="{{date==undefined}}">请录入方案设计完成时间</block>
      <block wx:if="{{date!=undefined}}">{{date}}</block>
    </picker>
  </view>
  <view class='margin-left-110 padding-10' style='width:500rpx;border-bottom:1rpx solid #c2c0c4'></view>
</view>

<button class='txt-white h5' style='width:450rpx;background:#03A8F3;'>完成</button>